//- Все примеси в этом файле должны начинаться c имени блока (main-box)

mixin main-box(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +main-box('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' main-box--' + modsList[i].trim();
      }
    }

  .main-box(class=allMods)&attributes(attributes)
    .main-box__inner!= text