//- Все примеси в этом файле должны начинаться c имени блока (logo-detail)

mixin logo-detail(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +logo-detail('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' logo-detail--' + modsList[i].trim();
      }
    }

  .logo-detail(class=allMods)&attributes(attributes)
    .logo-detail__inner!= text