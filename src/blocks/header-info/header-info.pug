//- Все примеси в этом файле должны начинаться c имени блока (.header-info)

mixin header-info(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +header-info('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + 'header-info--' + modsList[i].trim();
      }
    }

  .header-info(class=allMods)&attributes(attributes)
    .header-info__inner!= text
