//- Все примеси в этом файле должны начинаться c имени блока (page-title)

mixin page-title(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +page-title('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' page-title--' + modsList[i].trim();
      }
    }

  .page-title(class=allMods)&attributes(attributes)
    .page-title__inner!= text